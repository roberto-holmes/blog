---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Thumbnail from "../../components/Thumbnail.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import "../../styles/overview.css";

export async function getStaticPaths() {
	return [{ params: { lang: "en" } }, { params: { lang: "es" } }];
}
const { lang } = Astro.params;

const posts_en = (await getCollection("bloom_en")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const posts_es = (await getCollection("bloom_es")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="header"><h1>Bloom</h1></div>
			<section>
				<ul>
					{
						lang === "en" &&
							posts_en.map((post) => (
								<Thumbnail
									url={`bloom/en/${post.id.substring(0, post.id.length - 2)}`}
									image={post.data.heroImage}
									title={post.data.title}
									date={post.data.pubDate}
									locale="en-gb"
								/>
							))
					}
					{
						lang === "es" &&
							posts_es.map((post) => (
								<Thumbnail
									url={`bloom/es/${post.id.substring(0, post.id.length - 2)}`}
									image={post.data.heroImage}
									title={post.data.title}
									date={post.data.pubDate}
									locale="es"
								/>
							))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
