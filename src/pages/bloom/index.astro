---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";

import "../../styles/overview.css";
import Thumbnail from "../../components/Thumbnail.astro";

const posts = (await getCollection("bloom")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="header"><h1>Bloom</h1></div>
			<section>
				<ul>
					{posts.map((post) => <Thumbnail url={`bloom/${post.id}`} image={post.data.heroImage} title={post.data.title} date={post.data.pubDate} />)}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
