---
import HeaderLink from "./HeaderLink.astro";

const base_url = import.meta.env.BASE_URL;
const site_url = import.meta.env.SITE;

const current_lang = Astro.url.pathname.includes("/es") ? "es" : "en";
---

<header>
	<nav>
		<h2><a href=`${site_url}`>RH</a></h2>
		<div class="internal-links">
			<HeaderLink href=`${base_url}/${current_lang}`>{current_lang === "en" ? "Home" : "Inicio"}</HeaderLink>
			<HeaderLink href=`${base_url}/adler/${current_lang}`>Adler</HeaderLink>
			<HeaderLink href=`${base_url}/bloom/${current_lang}`>Bloom</HeaderLink>
			<HeaderLink href=`${base_url}/capstan/${current_lang}`>Capstan</HeaderLink>
		</div>
		<div class="internal-links">
			<a href={Astro.url.pathname.replace("/es", "/en")}>en</a>
			<a href={Astro.url.pathname.replace("/en", "/es")}>es</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
