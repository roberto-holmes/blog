---
const { id, colour, cover } = Astro.props;

const cover_id = id + "-cover";
---

<div style="position:relative;margin-bottom:2em;">
	<canvas id={id} style=`background-color: ${colour};`> </canvas>
	{
		cover === "true" && (
			<div id={cover_id}>
				<canvas style="background-color: black;position: absolute;top: 0;left: 0;" />
				<div
					style="position: absolute;top: 0;left: 0;color:aliceblue;
					width:100%;
					height:100%;
					display:flex;
					flex-direction: column;
					justify-content:center;
  					align-items:center;"
				>
					<h3 style="color:aliceblue;">Click to show</h3>
					<p style="color:aliceblue;width:80%;text-align: center;">
						Depending on your system, this may have a noticeable performance impact so feel free to click again to disable
					</p>
				</div>
			</div>
		)
	}
</div>

<style>
	canvas {
		width: 100%;
		height: auto;
		aspect-ratio: 16/9;
		background-color: salmon;

		/* Consider modifying this line if touch inputs don't work */
		touch-action: none;
	}
</style>
